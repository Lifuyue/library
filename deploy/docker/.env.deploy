# PostgreSQL 部署环境变量配置
# 生产环境请修改这些默认值！

# 数据库配置
DATABASE_URL=postgresql+psycopg://cs_user:cs_password@db:5432/cs_library
POSTGRES_DB=cs_library
POSTGRES_USER=cs_user
POSTGRES_PASSWORD=cs_password

# JWT 安全配置 - 生产环境必须修改！
SECRET_KEY=your-super-secret-key-change-this-in-production-2025
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# 文件上传配置
UPLOAD_DIR=uploads

# 服务器配置
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production

# 默认管理员配置
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_EMAIL=admin@example.com
ADMIN_DEFAULT_PASSWORD=admin123
