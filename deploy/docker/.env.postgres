# Production/PostgreSQL environment variables
# Backend secrets (override in real production via a secure secret store)
SECRET_KEY=change-me-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ENVIRONMENT=production

# Postgres connection (SQLAlchemy URL pattern)
POSTGRES_DB=cslibrary
POSTGRES_USER=csuser
POSTGRES_PASSWORD=change_me
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://csuser:change_me@postgresql:5432/cslibrary

# CORS (adjust to your domain)
CORS_ORIGINS=http://localhost,http://127.0.0.1,http://localhost:80

# Admin bootstrap
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_EMAIL=admin@example.com
ADMIN_DEFAULT_PASSWORD=admin123

# Uploads
UPLOAD_DIR=uploads
