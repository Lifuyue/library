# Development environment variables for backend (DO NOT commit to public repos)
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Security / token
SECRET_KEY=dev-secret-key-change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (PostgreSQL only)
# For Docker container connection, use service name 'postgres'
DATABASE_URL=postgresql+psycopg://csuser:change_me@postgres:5432/cslibrary

# CORS: allow local frontend dev ports
CORS_ORIGINS=http://localhost:8080,http://localhost:5173,http://localhost:3000

# Uploads
UPLOAD_DIR=uploads

# Admin bootstrap (dev)
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_EMAIL=admin@example.com
ADMIN_DEFAULT_PASSWORD=admin123
